<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>


<HBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csms.LoginController">
   <children>
      <StackPane prefHeight="400.0" prefWidth="350.0" styleClass="left-form" stylesheets="@styles.css">
         <children>
            <VBox alignment="CENTER" spacing="10">
            <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@pics/icons8-graduation-cap-100.png" />
               </image>
            </ImageView>
            <Label alignment="CENTER" prefHeight="52.0" prefWidth="350.0" text="COHAS BEPANDA" textFill="WHITE">
               <font>
                  <Font name="Script MT Bold" size="30.0" />
               </font>
            </Label>
            </VBox>
         </children>
      </StackPane>
      <StackPane prefHeight="400.0" prefWidth="336.0" styleClass="right-form" stylesheets="@styles.css" HBox.hgrow="ALWAYS">
         <children>
            <VBox alignment="CENTER" spacing="10">
                <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@pics/icons8-user-100.png" />
               </image>
            </ImageView>
               <Label prefHeight="16.0" prefWidth="74.0" text="UserName">
                  <font>
                     <Font name="Times New Roman Bold" size="14.0" />
                  </font>
               </Label>
               <TextField fx:id="username" prefHeight="28.0" prefWidth="202.0" styleClass="textfield"  />
               <Label prefHeight="16.0" prefWidth="74.0" text="Password">
                  <font>
                     <Font name="Times New Roman Bold" size="14.0" />
                  </font>
               </Label>
               <PasswordField fx:id="password" prefHeight="28.0" prefWidth="202.0" styleClass="textfield" />
               <Button fx:id="login" mnemonicParsing="false" stylesheets="@styles.css" text="Login" textFill="WHITE" styleClass="login">
                  <font>
                     <Font size="15.0" />
                  </font>
               </Button>
            </VBox>
         </children>
      </StackPane>
   </children>
</HBox>
